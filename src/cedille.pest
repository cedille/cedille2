term_induction = { "Î¼" ~ id ~ "." ~ term_application ~ ("@" ~ type_)? ~ "{" ~ cases ~ "}" }
term_match = { "Ïƒ" ~ ("<" ~ term ~ ">")? ~ term_application ~ ("@" ~ type_)? ~ "{" ~ cases ~ "}" }
term_separate = { "Î´" ~ type_? ~ "-" ~ term_application }
term_symmetry = { "Ï‚" ~ term_atom }

type_ = { 
    type_binder*
    ~ type_atom
    ~ ((erased_arrow | arrow) ~ type_ | "Â·" ~ type_atom | term_atom)*
}

type_application = { type_atom ~ ("Â·" ~ type_atom | term_atom)* }

type_binder = {
    type_forall
    | type_erased_forall
    | type_lambda
    | type_intersection
    | type_let
}

type_forall = { "Î " ~ id ~ ":" ~ type_ ~ "." }
type_erased_forall = { "âˆ€" ~ id ~ ":" ~ (kind | type_) ~ "." }
type_lambda = { "Î»" ~ id ~ ":" ~ (kind | type_) ~ "." }
type_intersection = { "Î¹" ~ id ~ ":" ~ type_ ~ "." }
type_let = { "[" ~ (define_term | define_type) ~ "]" ~ "-" }

type_atom = {
    "{" ~ term ~ "â‰ƒ" ~ term ~ "}"
    | "(" ~ type_ ~ ")"
    | hole
    | qual_id
}

kind = { 
    (kind_binder | type_application ~ "â”")*
    ~ kind_atom
    ~ ("â”" ~ kind)*
}

kind_binder = { "Î " ~ id ~ ":" ~ (kind | type_) ~ "." }

kind_atom = { 
    "(" ~ kind ~ ")"
    | "â˜…"
    | qual_kind_id ~ ("Â·" ~ type_atom | term_atom)+
}

ctors = { "|"? ~ id ~ ":" ~ type_ ~ ("|" ~ id ~ ":" ~ type_)* }
