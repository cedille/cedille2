    | "Ïƒ" ~ ("<" ~ term ~ ">")? ~ term_application ~ ("@" ~ type_)? ~ "{" ~ cases ~ "}" ~ proj?
    | "Î´" ~ type_? ~ "-" ~ term_application
    | "Ï‚" ~ term_atom
