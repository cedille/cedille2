type_binder = {
    "Î " ~ id ~ ":" ~ (kind | type_) ~ "."
    | "âˆ€" ~ id ~ ":" ~ (kind | type_) ~ "."
    | "Î»" ~ id ~ ":" ~ (kind | type_) ~ "."
    | "Î¹" ~ id ~ ":" ~ (kind | type_) ~ "."
    | "[" ~ (define_term | define_type) ~ "]" ~ "-"
}

type_application = { type_atom ~ ("Â·" ~ type_atom | term_atom)* }

type_atom = {
    "{" ~ term ~ "â‰ƒ" ~ term ~ "}"
    | "(" ~ type_ ~ ")"
    | "â—"
