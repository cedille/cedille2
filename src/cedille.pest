    "(" ~ id ~ ":" ~ (kind | type_) ~ ")"
    | "{" ~ id ~ ":" ~ type_ ~ "}"
}

id = @{ alpha ~ (alpha | greek | numeral | punctuation)* | "_" }
qual_id = @{ id ~ (("." | "/") ~ id)* }

kind_id = @{ "ğ’Œ" ~ (alpha | numeral | punctuation)* }
qual_kind_id = @{ (id ~ ".")* ~ kind_id }

path = @{ 
    ("../")*
    ~ (alpha | numeral | punctuation | path_delimiter )+
}

